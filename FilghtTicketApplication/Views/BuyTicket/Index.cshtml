@{
    ViewData["Title"] = "Available Flights";
}

<h1 class="text-center text-light">See Available Flights</h1>

<div class="container">
    <form class="form">
        <div class="row">
            <div class="form-group col-md-6">
                <input type="text" class="form-control bg-dark text-light" id="From" name="From" placeholder="From:" />
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control bg-dark text-light" id="To" name="To" placeholder="To:" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="align-content: center;">Search</button>
    </form>
</div>

<div class="card bg-dark">
    <hr class="text-light" />
    <div class="card-body" style="width: inherit;">
        <h2 class="card-title text-warning">Airline Name</h2>
    </div>
    <div class="row">
        <p class="col-md-6 text-info">From:</p>
        <p class="col-md-6 text-info">Departure:</p>
    </div>
    <div class="row">
        <p class="col-md-6 text-info">To:</p>
        <p class="col-md-6 text-info">Arrival:</p>
    </div>
    <div class="flex-row-reverse">
        <a class="btn btn-primary text-light" style="width: fit-content;">Buy</a>
    </div>
</div>
