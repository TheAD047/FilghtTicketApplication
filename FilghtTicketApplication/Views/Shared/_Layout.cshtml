<!DOCTYPE html>
<html lang="en">
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilghtTicketApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FilghtTicketApplication.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Easy Flights</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ClientView" asp-action="index">Client</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @if(User.IsInRole("ADMIN")) {
        <div class="row row-content">
            <div class="col-2 bg-dark side-bar">
                <div class="container-lg mt-2">
                    <h4>@User.Identity.Name.Substring(0, User.Identity.Name.IndexOf('@'))</h4>
                    <h6 class="text-muted">Admin</h6>
                    <hr class="text-light" />
                    <ul>
                        <li class="border-bottom side-item">
                            <a class="nav-link text-light mt-2" asp-area="" asp-controller="Flights" asp-action="Index">Flights</a>
                        </li>
                        <li class="border-bottom side-item">
                            <a class="nav-link text-light mt-2" asp-area="" asp-controller="Seats" asp-action="index">Seats</a>
                        </li>
                        <li class="border-bottom side-item">
                            <a class="nav-link text-light mt-2" asp-area="" asp-controller="Tickets" asp-action="index">Tickets</a>
                        </li>
                        <li class="border-bottom side-item">
                            <a class="nav-link text-light mt-2" asp-area="" asp-controller="Airlines" asp-action="index">Airlines</a>
                        </li>
                        <li class="border-bottom side-item">
                            <a class="nav-link text-light mt-2" asp-area="Identity" asp-action="/Accounts/RegisterAdmin">Register a new Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-content">
                <div class="container-sm">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    
    @if (!User.IsInRole("ADMIN"))
    {
        <footer class="border-top footer text-muted bg-dark">
            <div class="container">
                &copy; 2022 - Easy Flights- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> | 
                Student number: 200489790 | 
                <a href="https://github.com/TheAD047/FilghtTicketApplication.git">Code Repo</a> |     
                COMP 2084 Sevrer Side Scripting Using ASP.NET
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--Source: https://kryogenix.org/code/browser/sorttable/ -->
    <script src="~/js/sorttable.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
