@model FilghtTicketApplication.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">EDIT</h1>

<h2 class="text-center">Ticket ID: @Html.DisplayFor(Model => Model.ticketID)</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ticketID" />
            <div class="form-group">
                <label asp-for="flightID" class="control-label">Flight ID</label>
                <select asp-for="flightID" class="form-control" asp-items="ViewBag.flightID"></select>
                <span asp-validation-for="flightID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="seatID" class="control-label">Seat ID</label>
                <input asp-for="seatID" class="form-control" />
                <span asp-validation-for="seatID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="purchasedOn" class="control-label">Purcased On</label>
                <input asp-for="purchasedOn" class="form-control" />
                <span asp-validation-for="purchasedOn" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<br />

<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
