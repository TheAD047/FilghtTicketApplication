@model FilghtTicketApplication.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>

<br />

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fligth Name
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Flights" asp-action="Details" asp-route-id="@Model.flightID">
                @Html.DisplayFor(model => model.flight.flightName)
            </a>
        </dd>
        <dt class = "col-sm-2">
            Seat ID
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Seats" asp-action="Details" asp-route-id="@Model.seatID">
                @Html.DisplayFor(model => model.seatID)
            </a>
        </dd>
        <dt class = "col-sm-2">
            Purchased On
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchasedOn)
        </dd>
    </dl>

    <br />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ticketID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
