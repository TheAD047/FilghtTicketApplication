@model FilghtTicketApplication.Models.Seat

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>

<br />

<div>
    <h4>Seat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Flight ID
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Flights" asp-action="Details" asp-route-id="@Model.flightID">
                @Html.DisplayFor(model => model.Flight.flightID)
            </a>
        </dd>
        <dt class = "col-sm-2">
            Fligth Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.flightName)
        </dd>
        <dt class = "col-sm-2">
            Seat Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.seatNum)
        </dd>
        <dt class = "col-sm-2">
            Seat Row
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.seatRow)
        </dd>
        <dt class = "col-sm-2">
            Booking status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isBooked)
        </dd>
    </dl>
    
    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="seatID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
