@model FilghtTicketApplication.Models.Seat

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<br />

<div>
    <h4>Seat</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fligth Name
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Flights" asp-action="Details" asp-route-id="@Model.flightID">
                @Html.DisplayFor(model => model.Flight.flightName)
            </a>
        </dd>
        <dt class="col-sm-2">
            Airline Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.airline.airlineName)
        </dd>
        <dt class = "col-sm-2">
            Seat Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.seatNum)
        </dd>
        <dt class = "col-sm-2">
            Seat Row
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.seatRow)
        </dd>
        <dt class = "col-sm-2">
            Booking Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isBooked)
        </dd>
    </dl>
</div>

<br />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.seatID" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
