@model FilghtTicketApplication.Models.Airline

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create An Airline</h1>

<hr class="text-light" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="airlineName" class="control-label">Airline Name</label>
                <input asp-for="airlineName" class="form-control" />
                <span asp-validation-for="airlineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="airlineEmail" class="control-label">Email Address</label>
                <input asp-for="airlineEmail" class="form-control" />
                <span asp-validation-for="airlineEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
