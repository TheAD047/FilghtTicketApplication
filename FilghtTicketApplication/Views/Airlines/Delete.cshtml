@model FilghtTicketApplication.Models.Airline

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>

<br />

<div>
    <h4>Airline</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Airline Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.airlineName)
        </dd>
        <dt class = "col-sm-2">
            Email Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.airlineEmail)
        </dd>
    </dl>

    <br />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="airlineID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
