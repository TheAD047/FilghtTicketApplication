@model FilghtTicketApplication.Models.Airline

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<br />

<div>
    <h4>Airline</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Airline Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.airlineName)
        </dd>
        <dt class = "col-sm-2">
            Email Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.airlineEmail)
        </dd>
    </dl>
</div>

<br />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.airlineID" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
