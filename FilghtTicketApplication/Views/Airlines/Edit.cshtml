@model FilghtTicketApplication.Models.Airline

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">EDIT</h1>

<h4 class="text-center">@Html.DisplayFor(model => model.airlineName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="airlineID" />
            <div class="form-group">
                <label asp-for="airlineName" class="control-label">Airline Name</label>
                <input asp-for="airlineName" class="form-control" />
                <span asp-validation-for="airlineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="airlineEmail" class="control-label">Email Address</label>
                <input asp-for="airlineEmail" class="form-control" />
                <span asp-validation-for="airlineEmail" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
